
<h1>New Restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
<%= f.input :name %>
<%= f.input :address %>
<%= f.input :category, collection: %w(chinese italian japanese french belgian) %>
<%= f.button :submit, class: "btn btn-primary" %>
<%= link_to "Cancel", :back, {:class=>"btn btn-default"} %>
<% end %>
